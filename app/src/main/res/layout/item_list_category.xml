<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/layCategory"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="7dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layItemCategory"
            style="@style/MatchMatchLayout">

            <ImageView
                android:id="@+id/imgItemCategory"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/bg_all_rounded"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtItemCategoryTitle"
                style="@style/MatchWrapLayout"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:gravity="right"
                android:maxLines="2"
                android:padding="7dp"
                android:text="Nama Kategori"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>