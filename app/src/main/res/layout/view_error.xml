<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layError"
    style="@style/MatchMatchLayout"
    android:animateLayoutChanges="true"
    android:background="@color/flat_clouds"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp"
    android:visibility="gone">

    <ImageView
        android:id="@+id/imgError"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/robotman" />

     <TextView
         android:id="@+id/txtError"
         style="@style/MatchWrapLayout"
         android:layout_marginTop="5dp"
         android:layout_marginBottom="20dp"
         android:layout_toRightOf="@id/imgError"
         android:gravity="center"
         android:text="@string/text_error"
         android:textColor="#424242"
         android:textSize="14sp" />

    <Button
        android:id="@+id/btnError"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgError"
        android:drawableLeft="@drawable/ic_refresh"
        android:text="Ulangi"
        android:textSize="18sp"
        android:theme="@style/ButtonColoredPrimaryDark" />

</LinearLayout>