<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardPembelian"
    style="@style/MatchWrapLayout"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ff7615" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layItemPaymentHistory"
            style="@style/MatchWrapLayout"
            android:orientation="vertical"
            android:padding="10dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Order ID" />

                    <TextView
                        android:id="@+id/txtOrderId"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text=""
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:layout_width="120dp"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/txtEmail"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text=""
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="120dp"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Nama Rekening" />

                    <TextView
                        android:id="@+id/txtRekName"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text=""
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="100dp"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Jumlah" />

                    <TextView
                        android:id="@+id/txtTotal"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text=""
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
            <LinearLayout
                style="@style/MatchWrapLayout"
                android:layout_marginTop="5dp"
                android:background="@color/flat_clouds"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtDate"
                    style="@style/MatchWrapLayout"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_event"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="" />

                <TextView
                    android:id="@+id/txtStatus"
                    style="@style/MatchWrapLayout"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_notifications_active"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnOption"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/ic_dots_vertical" />

    </RelativeLayout>

</android.support.v7.widget.CardView>