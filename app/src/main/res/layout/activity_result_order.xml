<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:stretchColumns="1">

            <TableRow>

                <TextView
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text="Order Number" />

                <TextView
                    android:id="@+id/txtOrderId"
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text=""
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text="Date" />

                <TextView
                    android:id="@+id/txtDateOrder"
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text=""
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text="Email" />

                <TextView
                    android:id="@+id/txtEmail"
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text=""
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text="Total" />

                <TextView
                    android:id="@+id/txtTotal"
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text=""
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text="Payment Method" />

                <TextView
                    android:id="@+id/txtPaymentMethod"
                    style="@style/MatchWrapLayout"
                    android:padding="5dp"
                    android:text=""
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Order Details"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:stretchColumns="1">

                    <TableRow>

                        <TextView
                            style="@style/MatchWrapLayout"
                            android:padding="5dp"
                            android:text="Tourist Name" />

                        <TextView
                            android:id="@+id/txtTouristName"
                            style="@style/MatchWrapLayout"
                            android:padding="5dp"
                            android:text=""
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/MatchWrapLayout"
                            android:padding="5dp"
                            android:text="Subtotal" />

                        <TextView
                            android:id="@+id/txtSubtotal"
                            style="@style/MatchWrapLayout"
                            android:padding="5dp"
                            android:text=""
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/MatchWrapLayout"
                            android:padding="5dp"
                            android:text="Total" />

                        <TextView
                            android:id="@+id/txtTotalPayment"
                            style="@style/MatchWrapLayout"
                            android:padding="5dp"
                            android:text=""
                            android:textStyle="bold" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        android:id="@+id/btnCheckMyOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Check My Order"
        android:theme="@style/ButtonColoredPrimaryDark" />

</RelativeLayout>