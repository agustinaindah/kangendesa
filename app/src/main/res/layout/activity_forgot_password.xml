<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatchLayout"
    android:background="@drawable/bakcground"
    android:orientation="vertical">

    <LinearLayout
        style="@style/MatchMatchLayout"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/logo_kangendesa" />

        <RelativeLayout
            style="@style/MatchWrapLayout"
            android:layout_margin="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputEmail"
                style="@style/TextLabel"
                android:textColorHint="#E76B22"
                android:padding="5dp">

                <EditText
                    android:id="@+id/edtEmail"
                    style="@style/AppTheme.EditTextMaterial"
                    android:textColorHint="#E76B22"
                    android:hint="@string/email" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnReset"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/inputEmail"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_round"
                android:padding="5dp"
                android:text="Send Email"
                android:textColor="#fc9c34"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>