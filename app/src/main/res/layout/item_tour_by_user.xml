<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardTourByUser"
    style="@style/MatchWrapLayout"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/layCardTourByUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/imgTour"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_all_rounded"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtTitleTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/imgTour"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text="Gua Susur"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtPriceTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txtTitleTour"
            android:layout_toRightOf="@id/imgTour"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtGuideNameCartTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/txtPriceTour"
            android:layout_toRightOf="@id/imgTour"
            android:ellipsize="end"
            android:text="Pemandu : -"
            android:textStyle="italic"
            android:textSize="15sp" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff7615" />

</android.support.v7.widget.CardView>