<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtJudul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:text=""/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:stretchColumns="1">

                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Nomor Order" />

                    <TextView
                        android:id="@+id/txtOrderNo"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="-"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/txtEmail"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="-"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Bank Tujuan" />

                    <TextView
                        android:id="@+id/txtDestBank"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="-"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Bank Pengirim" />

                    <TextView
                        android:id="@+id/txtOriginBank"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="-"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Nama Rekening" />

                    <TextView
                        android:id="@+id/txtRekName"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text=""
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Metode Transfer" />

                    <TextView
                        android:id="@+id/txtTransferMethod"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="-"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Jumlah Transfer" />

                    <TextView
                        android:id="@+id/txtNominal"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text=""
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Tanggal Pengiriman" />

                    <TextView
                        android:id="@+id/txtDateTransfer"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="-"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="Status" />

                    <TextView
                        android:id="@+id/txtStatus"
                        style="@style/MatchWrapLayout"
                        android:padding="5dp"
                        android:text="-"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Bukti Pembayaran"/>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/bg_all_rounded"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imgScreenshoot"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:background="@color/grey_300" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>