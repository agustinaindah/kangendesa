<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardPembelian"
    style="@style/MatchWrapLayout"
    android:layout_marginBottom="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCartTour"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_all_rounded"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtTitleCartTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/imgCartTour"
            android:ellipsize="end"
            android:textStyle="bold"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtPriceCartTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/txtTitleCartTour"
            android:layout_toRightOf="@id/imgCartTour"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtGuideNameCartTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/txtPriceCartTour"
            android:layout_toRightOf="@id/imgCartTour"
            android:ellipsize="end"
            android:text="Pemandu : -"
            android:textStyle="italic"
            android:textSize="15sp" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ff7615" />

</android.support.v7.widget.CardView>