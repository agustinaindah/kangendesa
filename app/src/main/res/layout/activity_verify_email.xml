<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="14sp"
                android:textColor="#212121"
                android:text="Silahkan Masukkan Kode Verifikasi yang sudah di kirim pada Alamat Email Anda"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputEmail"
                style="@style/TextLabel"
                android:padding="3dp"
                android:textColorHint="#E76B22">

                <EditText
                    android:id="@+id/edtEmail"
                    style="@style/AppTheme.EditTextMaterial"
                    android:ems="10"
                    android:hint="Email"
                    android:textColorHint="#E76B22"
                    android:inputType="textEmailAddress" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputVerifyCode"
                style="@style/TextLabel"
                android:padding="3dp"
                android:textColorHint="#E76B22">

                <EditText
                    android:id="@+id/edtVerifyCode"
                    style="@style/AppTheme.EditTextMaterial"
                    android:ems="10"
                    android:hint="Kode Verifikasi"
                    android:textColorHint="#E76B22"
                    android:inputType="textPassword" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:theme="@style/ButtonColoredPrimaryDark"
                android:text="Verifikasi Email Saya"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>